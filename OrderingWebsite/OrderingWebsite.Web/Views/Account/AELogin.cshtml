<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>后台登录</title>

    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/lib/element-ui/theme-chalk/index.css" />
    <script type="text/javascript" src="~/lib/vue/vue.js"></script>
    <script type="text/javascript" src="~/lib/element-ui/index.js"></script>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>
    <script type="text/javascript" src="~/js/moment.js"></script>
</head>
<body>
    <div id="app" class="login-div">
        <div class="login-container">
            <el-form :model="model" :rules="rules2"
                     status-icon
                     ref="userForm"
                     label-position="left"
                     label-width="0px"
                     class="demo-ruleForm login-page">
                <h3 class="title">{{title}}</h3>
                <el-form-item prop="username" style="margin-top: 20px;">
                    <el-input type="text"
                              v-model="model.username"
                              auto-complete="off"
                              placeholder="用户名"></el-input>
                </el-form-item>
                <el-form-item prop="password">
                    <el-input type="password"
                              v-model="model.password"
                              auto-complete="off"
                              placeholder="密码"></el-input>
                </el-form-item>
                <el-checkbox v-model="checked"
                             class="rememberme">记住密码</el-checkbox>
                <el-form-item style="width:100%;">
                    <el-button type="primary" style="width:100%;" @@click="handleSubmit" :loading="logining">登录</el-button>
                </el-form-item>
            </el-form>
        </div>
    </div>
</body>
</html>

<script>
    var app = new Vue({
        el: "#app",
        data: {
            logining: false,
            model: {
                username: 'Admin',
                password: '',
            },
            rules2: {
                username: [{ required: true, message: '请输入用户名', trigger: 'blur' }],
                password: [{ required: true, message: '请输入密码', trigger: 'blur' }]
            },
            checked: false,
            title: "吃了么外卖后台管理系统登录"
        },
        methods: {
            handleSubmit: function (event) {
                this.$refs.userForm.validate((valid) => {
                    if (valid) {
                        var params = `account=${this.model.username}&password=${this.model.password}&type=1`

                        this.logining = true;

                        _fetch("/Account/DoLogin?" + params, "POST").then(res => {
                            if (res.status == true) {
                                console.log('登录成功!');
                                location.href = "/Home/Index";
                            }
                            else {
                                alert("用户名或密码错误！");
                            }
                            this.logining = false;
                        });

                    } else {
                        console.log('error submit!');
                        return false;
                    }
                })
            }
        }
    });</script>

<style>
    .login-div {
        background-color: #eee;
        background: url(/img/login-bg.jpg) center no-repeat;
        background-size: 100% 100%;
        padding-bottom: 20px;
        padding-top: 20vh;
        min-height: 100vh;
        height: 100%;
    }

    .login-container {
        width: 100%;
        height: 100%;
    }

    .login-page {
        margin: 180px auto;
        width: 350px;
        padding: 35px 35px 15px;
        background: #fff;
        border: 1px solid #eaeaea;
    }

    label.el-checkbox.rememberme {
        margin: 0px 0px 15px;
        text-align: left;
    }

    .el-button--primary {
        background-color: #415676 !important;
    }

        .el-button--primary:hover {
            background-color: #1e78af !important;
        }
</style>
